pipeline {
    agent any

    stages {
        stage('Instalar Dependencias') {
            steps {
                script {
                    
                     'npm install'
                }
            }
        }

        stage('Construir') {
            steps {
                script {
                    
                     'npm run ng build'
                }
            }
        }

        stage('Copiar archivos a C:\\ACT_VOPP') {
            steps {
                script {
                    
                    bat 'robocopy dist/ C:\\ACT_VOPP /E'

                    
                    def robocopyExitCode = bat(script: 'echo %ERRORLEVEL%', returnStatus: true)

                    
                    echo "robocopy exit code: ${robocopyExitCode}"

                    
                    if (robocopyExitCode > 3) {
                        error 'Error en robocopy'
                    } else {
                        echo 'robocopy ejecutado con éxito'
                    }
                }
            }
        }
    }

    post {
        success {
            
            echo 'Pipeline ejecutado exitosamente. ¡Construcción y copia de archivos exitosas!'
        }
        failure {
            
            echo 'El pipeline ha fallado. Revisar los registros para más detalles.'
        }
    }
}
